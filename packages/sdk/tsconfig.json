{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "jsxImportSource": "@emotion/react",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "src/emotion.d.ts"],
  "exclude": ["dist", "node_modules", "**/*.test.*", "**/*.spec.*"]
}
